#
# See https://editorconfig.org for the meaning of this file.
#

root = true

# Python files.
[*.py]
    max_line_length = 99
    indent_style = space
    indent_size = 4

# HTML files
[*.{htm,html}]
    max_line_length = 120

# Markdown
[*.md]
    max_line_length = 80

[makefile]
    indent_style = tab